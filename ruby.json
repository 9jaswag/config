// VSCode user snippets for Ruby
{
  // Place your snippets for ruby here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "binding.pry": {
    "prefix": "pry",
    "body": ["binding.pry"],
    "description": "Insert break point"
  },

  "# frozen_string_literal: true": {
    "prefix": "frozen",
    "body": ["# frozen_string_literal: true"],
    "description": "Insert required Ruby comment"
  },

  "do...end block": {
    "prefix": "do",
    "body": ["do ${1:|${2:reference}|}\n\t$0\nend"],
    "description": "Insert Ruby's do/end block"
  },

  "it...end block": {
    "prefix": "it",
    "body": ["it '${1:does stuff}' do\n\t$0\nend"],
    // "body": ["do ${1:|${2:reference}|}\n\t$0\nend"],
    "description": "it block for spec tests"
  },

  "defs": {
    "prefix": "defs",
    "body": ["def self.${1:method_name}\n\t$0\nend"],
    "description": "class method definition"
  }
}
// https://code.visualstudio.com/docs/editor/userdefinedsnippets
